<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:widget="http://www.comsysto.com/dalli/android/widget">
	<LinearLayout
		android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
	    <ImageView android:src="@drawable/findparty_logo" android:id="@+id/imageView1"
	    	android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"></ImageView>


        <TextView android:layout_height="25dip" android:layout_width="fill_parent" android:text="@string/SPACE_LABEL"/>

        <TextView android:layout_width="fill_parent" android:layout_height="30dip" android:gravity="center"
	        android:id="@+id/categoryNameText" android:text="Test" style="@android:style/TextAppearance.Large"></TextView>

        <TextView android:layout_height="25dip" android:layout_width="fill_parent" android:text="@string/SPACE_LABEL"/>

	    <Spinner
	        android:id="@+id/levelSpinner"
	        android:layout_height="wrap_content"
	        android:prompt="@string/EXPERIENCE_LABEL"
            android:layout_width="200dip"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
        />

        <Button android:layout_width="200dip" android:layout_gravity="center_horizontal" android:gravity="center" android:layout_height="wrap_content"
                  android:id="@+id/partyTimeButton" android:text="Placehodler for Time"/>

        <Button android:layout_width="200dip" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
                android:id="@+id/numberOfParticipantsButton" android:text="Placehodler for Participants"/>

        <Button android:layout_width="200dip" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
                android:id="@+id/partyLocationButton" android:text="Waiting For Location"/>

        <Button android:layout_width="150dip" android:layout_height="wrap_content"
	    	android:text="@string/ADD_PARTY_BUTTON" android:id="@+id/addButton"
	    	android:layout_gravity="center_vertical|center_horizontal"
           />

	</LinearLayout>
</ScrollView>