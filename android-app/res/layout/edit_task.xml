<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
	<GridLayout
		android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:rowCount="7" android:columnCount="3">

        <!--
        <TextView android:layout_height="25dip" android:layout_width="fill_parent" android:text="@string/SPACE_LABEL"/>
        <TextView android:layout_width="fill_parent" android:layout_height="30dip" android:gravity="center"
	        android:id="@+id/categoryNameText" android:text="Test" style="@android:style/TextAppearance.Large.Inverse"></TextView>
        <TextView android:layout_height="25dip" android:layout_width="fill_parent" android:text="@string/SPACE_LABEL"/>
        -->
        <Space
                android:layout_width="fill_parent"
                android:layout_height="20px"
                android:id="@+id/space" android:layout_columnSpan="3"/>
        <Spinner
	        android:id="@+id/levelSpinner"
	        android:layout_height="wrap_content"
	        android:prompt="@string/EXPERIENCE_LABEL"
            android:layout_width="200dip"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_row="1" android:layout_columnSpan="3"/>

        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_height="wrap_content"
            android:prompt="@string/EXPERIENCE_LABEL"
            android:layout_width="200dip"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_row="2" android:layout_column="2"/>

        <Button android:layout_width="200dip" android:layout_gravity="center_horizontal" android:gravity="center" android:layout_height="wrap_content"
                  android:id="@+id/partyTimeButton" android:text="Placehodler for Time" android:layout_row="3"
                  android:layout_column="2"/>

        <Button android:layout_width="200dip" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
                android:id="@+id/numberOfParticipantsButton" android:text="Placehodler for Participants"
                android:layout_column="2" android:layout_row="4"/>

        <Button android:layout_width="200dip" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
                android:id="@+id/partyLocationButton" android:text="Waiting For Location" android:layout_row="5"
                android:layout_column="2"/>

        <Button android:layout_width="150dip" android:layout_height="wrap_content"
	    	android:text="@string/ADD_PARTY_BUTTON" android:id="@+id/addButton"
	    	android:layout_gravity="center_vertical|center_horizontal"
            android:layout_row="6" android:layout_column="2"/>

	</GridLayout>
</ScrollView>