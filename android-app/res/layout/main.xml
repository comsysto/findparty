<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/gradient_background">


    <ImageView
            android:src="@drawable/logo_findbuddies_460px_v02"
            android:id="@+id/imageView1"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>


    <TextView
            android:layout_height="50dip"
            android:layout_width="fill_parent"
            android:text="@string/SPACE_LABEL"/>

    <Button
            style="@style/CommonPartyButton"
            android:text="@string/CREATE_NEW_PARTY_BUTTON"
            android:id="@+id/CREATE_NEW_PARTY_BUTTON"/>

    <Button
            style="@style/CommonPartyButton"
            android:text="@string/FIND_PARTY_BUTTON"
            android:id="@+id/FIND_PARTY_BUTTON"/>

    <Button
            style="@style/CommonPartyButton"
            android:text="@string/MY_PARTIES_BUTTON"
            android:id="@+id/MY_PARTIES_BUTTON"/>

</LinearLayout>
