<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <debug/>


    <http use-expressions="true" create-session="stateless" authentication-manager-ref="mongoBackedAuthenticationManager">
        <!-- TODO: authenticated URLs should use 'require-channel="https"' on basic-authentication -->
        <intercept-url pattern="/services/users" method="POST" access="isAuthenticated()" />
        <intercept-url pattern="/services/users/**" access="permitAll" />
        <intercept-url pattern="/services/parties/echo/**" access="permitAll" />
        <intercept-url pattern="/services/**" access="isAuthenticated()" />
        <http-basic entry-point-ref="restBasicAuthEntryPoint" />
    </http>

    <global-method-security pre-post-annotations="enabled"/>

    <!-- this authentication-manager is based on users in mongodb backend, which are loaded via the 'mongoBackedUserDetailsService' -->
    <authentication-manager  alias="mongoBackedAuthenticationManager">
        <authentication-provider user-service-ref="mongoBackedUserDetailsService" />
    </authentication-manager>


    <!-- this authentication-manager is based on static user-details (key-value in <user-service>)
